{
    "manifest_version": 3,
    "name": "Text Improver",
    "version": "1.1",
    "description": "Improve selected text with AI",
    "permissions": [
        "contextMenus",
        "activeTab",
        "clipboardWrite"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}